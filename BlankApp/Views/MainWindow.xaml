<sf:ChromelessWindow x:Class="BlankApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        xmlns:skinManager="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
        xmlns:sf="http://schemas.syncfusion.com/wpf" 
        Title="Chromeless Window Demo"
        xmlns:viewmodel="clr-namespace:BlankApp.ViewModel"
        xmlns:views="clr-namespace:BlankApp.Views" 
        Width="1200"
        Height="700"
        CornerRadius="15"
        Icon="/BlankApp;component/Assets/Chromeless Window/App.ico"
        sf:SkinStorage.VisualStyle="Metro"
        Opacity="1"
        AllowsTransparency="True"
        ResizeBorderThickness="5"
        UseNativeChrome="True"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <views:Hierarchical/>
    </Grid>
</sf:ChromelessWindow>
